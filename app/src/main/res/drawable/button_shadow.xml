<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

<item>
<shape>
    <padding
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp"
        android:top="0dp" />
    <solid android:color="#2F3D3B3B" />
    <corners android:radius="45dp" />
</shape>
</item>
<item>
<shape>
    <padding
        android:bottom="4dp"
        android:left="1dp"
        android:right="1dp"
        android:top="0dp" />
    <solid android:color="#3F585555" />
    <corners android:radius="30dp" />
</shape>
</item>

    <!-- Background -->
<item>
<shape>

    <gradient
        android:startColor="#FAFAF9"
        android:endColor="#FFEB3B"
        android:angle="270"
        />
    <corners
        android:radius="30dp">
    </corners>

    <stroke
        android:width="1dp"
        android:color="#FFEB3B">
    </stroke>

    <padding
        android:top="0dp"
        android:right="10dp"
        android:left="10dp"
        android:bottom="0dp">
    </padding>
</shape>
</item>
</layer-list>