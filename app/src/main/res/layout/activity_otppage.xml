<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FECE00"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".OTPpage">
    <LinearLayout

        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
  >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44sp"
            android:gravity="center"
            android:text="Verification Code"
            android:textStyle="bold"
            android:textColor="#0E0C0C"

            android:textSize="30sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Please Enter The Verification Code "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Sent To +8801844462227"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_otp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:paddingTop="20dp"
        android:layout_below="@+id/layout_header"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextone"
            android:layout_width="40dp"
            android:layout_height="42dp"
            android:inputType="numberPassword"
            android:maxLength="1"

            android:nextFocusRight="@+id/editText_two">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editTexttwo"
            android:layout_width="40sp"
            android:layout_height="42sp"
            android:inputType="numberPassword"
            android:maxLength="1"/>

        <EditText
            android:id="@+id/editTextthree"
            android:layout_width="40sp"
            android:layout_height="42sp"
            android:inputType="numberPassword"
            android:maxLength="1"/>


        <EditText
            android:id="@+id/editTextfour"
            android:layout_width="40sp"
            android:layout_height="42sp"
            android:inputType="numberPassword"
            android:maxLength="1"/>

        <EditText
            android:id="@+id/editTextfive"
            android:layout_width="40sp"
            android:layout_height="42sp"
            android:inputType="numberPassword"
            android:maxLength="1"/>

        <EditText
            android:id="@+id/editTextsix"
            android:layout_width="40sp"
            android:layout_height="42sp"
            android:inputType="numberPassword"
            android:maxLength="1"/>


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="65sp"
        android:id="@+id/submit_button"
        android:text="SUBMIT"
        android:textSize="20sp"
        android:background="@drawable/button_shadow"/>


</LinearLayout>