                android:textStyle="bold"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
android:layout_margin="10dp"
    android:gravity="center">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/userEmailTextInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="250dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/userEmailTextInputEditText"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="80dp"
                    android:hint="Max point use per order 50" />
            </com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.button.MaterialButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="#36A03C"
    android:text="ADD +"
    android:textColor="#0C0C0C"
    />

</LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Payement Type"
    android:textSize="18sp"
    android:textStyle="bold"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="10dp"
    />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash On Delivery"
                android:checked="true"
                android:layout_marginLeft="30dp"
                />


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:textStyle="bold"
    android:text="Delivery To:"
    android:textSize="17sp"

    />
            <TextView
                android:id="@+id/tv_user_address_map_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:textSize="14sp"
                android:text="c1, monallee tower, bastola"
                android:background="@drawable/background_delivery_address"
                />





