                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Discount" />
                <TextView
                    android:id="@+id/tv_discount_amount"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="0.0"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Taka"/>

            </LinearLayout>

