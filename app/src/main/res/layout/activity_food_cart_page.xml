<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Restaurant"
    android:textSize="16sp"
    />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_margin="4dp">

                <ImageView
                    android:id="@+id/list_icon"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:src="@drawable/user"
                    android:background="@drawable/friendlist_icon_bg" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/friendlist_name_bg"
                    android:layout_toRightOf="@+id/list_icon"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:id="@+id/tv_friend_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingRight="16dp"
                        android:text="Nurul Momen" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:paddingRight="6dp"
                            android:text="Total Earn:" />

                        <TextView

                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:paddingRight="6dp"
                            android:text="200" />

                        <TextView

                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:paddingRight="16dp"
                            android:text="Points" />


                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_cart"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="10dp">
    </android.support.v7.widget.RecyclerView>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="@android:color/black" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="6dp">

    <TextView
        android:id="@+id/tv_total_food_price"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sub Total" />
    <TextView
        android:id="@+id/tv_food_price"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Price"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Taka"/>


</LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="6dp">

                <TextView

                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Delivery Charge" />
                <TextView
                    android:id="@+id/tv_delivery_charge"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Price"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Taka"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="6dp">

                <TextView
                    android:id="@+id/tv_vat_amount"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="VAT" />
                <TextView
                    android:id="@+id/tv_total_vat"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"

                    android:text="Price"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Taka"/>

            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="6dp">

                <TextView

                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Discount" />
                <TextView
                    android:id="@+id/tv_discount_amount"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Price"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Taka"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="6dp">

                <TextView
                    android:id="@+id/tv_order_item"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Total" />
                <TextView
                    android:id="@+id/tv_order_item_price"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"

                    android:text="Price"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Taka"/>
            </LinearLayout>


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Payement Type"
    android:textSize="18sp"
    android:textStyle="bold"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="10dp"
    />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash On Delivery"
                android:checked="true"
                android:layout_marginLeft="30dp"
                />


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:textStyle="bold"
    android:text="Delivery To:"
    android:textSize="17sp"

    />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:textSize="14sp"
                android:text="c1, monallee tower, bastola"
                android:background="@drawable/background_delivery_address"
                />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply Promo"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:background="#EB0707"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Pre-Order"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"

        />
    <Button
        android:id="@+id/btn_placeorder"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="180dp"
        android:layout_margin="10dp"
        android:onClick="insertOrder"
        android:text="Place Order"
android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="#0A0909"
        tools:ignore="OnClick"/>

</LinearLayout>
        </LinearLayout>
</RelativeLayout>
    </ScrollView>
    </LinearLayout>
