    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_cart"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="10dp">
    </android.support.v7.widget.RecyclerView>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="@android:color/black" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="6dp">

    <TextView
        android:id="@+id/tv_total_food_price"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sub Total" />
    <TextView
        android:id="@+id/tv_food_price"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Price"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Taka"/>


</LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="6dp">

                <TextView

                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Delivery Charge" />
                <TextView
                    android:id="@+id/tv_delivery_charge"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Price"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Taka"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="6dp">

                <TextView
                    android:id="@+id/tv_vat_amount"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="VAT" />
                <TextView
                    android:id="@+id/tv_total_vat"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"

                    android:text="Price"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Taka"/>

            </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="6dp">

                <TextView

                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Discount" />
                <TextView
                    android:id="@+id/tv_discount_amount"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Price"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Taka"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="6dp">

                <TextView
                    android:id="@+id/tv_order_item"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Total" />
                <TextView
                    android:id="@+id/tv_order_item_price"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"

                    android:text="Price"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Taka"/>
            </LinearLayout>


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Payement Type"
    android:textSize="18sp"
    android:textStyle="bold"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="10dp"
    />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash On Delivery"
                android:checked="true"
                android:layout_marginLeft="30dp"
                />



        </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply Promo"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="62dp"
        android:background="#EB0707"
        />


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Pre-Order"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"

        />
    <Button
        android:id="@+id/btn_placeorder"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="180dp"
        android:layout_margin="10dp"
        android:onClick="insertOrder"
        android:text="Place Order"
android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="#0A0909"
        tools:ignore="OnClick"/>



    </RelativeLayout>
