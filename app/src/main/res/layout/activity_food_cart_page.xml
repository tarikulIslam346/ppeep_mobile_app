                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Delivery Charge" />
                <TextView
                    android:id="@+id/tv_delivery_charge"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
