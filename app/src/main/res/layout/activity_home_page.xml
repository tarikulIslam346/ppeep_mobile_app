        </com.google.android.material.tabs.TabLayout>-->


        <com.github.florent37.bubbletab.BubbleTab
            android:id="@+id/tabLayoutId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"

            android:background="@android:color/white"
            android:elevation="40dp"
            app:bubbleTab_circleColor="#ffcc00"
            app:bubbleTab_circleRatio="1.25"
            android:scaleType="fitCenter"


            app:bubbleTab_image0="@drawable/homeicon2"


            app:bubbleTab_image1="@drawable/grouptest3"

            app:bubbleTab_image2="@drawable/notificationicon"

            />
        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewPagerId">

        </androidx.viewpager.widget.ViewPager>

    </LinearLayout>



    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/NavigationId2"
        android:background="#ffffffff"
        app:menu="@menu/drawermenu"
        android:layout_gravity="start"
        app:headerLayout="@layout/header">

    </com.google.android.material.navigation.NavigationView>

