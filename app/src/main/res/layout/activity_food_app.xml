<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FoodApp"
    android:id="@+id/food_app_layout">



    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:title="PPEEP FOOD"
        android:gravity="center"
        android:theme="@style/AppTheme2"
        android:id="@+id/foodtoolbar"

        android:background="@color/colorPrimary">


    </androidx.appcompat.widget.Toolbar>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/layout_address">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:text="Delivery To:"
        android:textSize="14sp"

        />
    <TextView
        android:id="@+id/tv_delivery_address"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_margin="10dp"
        android:maxLength="40"
        android:text="c1, monallee tower, bastola"

        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_arrow_forward_black_24dp"

        android:layout_gravity="right"/>
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



       <!-- <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#F0EFEB"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabIndicatorColor="#F50303"
            android:id="@+id/tabLayoutId"
            app:tabIndicatorHeight="0dp"
            app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
            app:tabPaddingBottom="-1dp"
            android:layout_margin="2dp"
            app:tabPaddingEnd="-1dp"
            app:tabPaddingStart="-1dp"
            app:tabPaddingTop="-1dp">

        </com.google.android.material.tabs.TabLayout>-->

        <com.github.florent37.bubbletab.BubbleTab
            android:id="@+id/tabLayoutId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="true"
            android:background="@android:color/white"
            android:elevation="10dp"
            app:bubbleTab_circleColor="#ffcc00"
            app:bubbleTab_circleRatio="1.25"
            android:tooltipText="Home"
            app:bubbleTab_image0="@drawable/homeicon2"


            app:bubbleTab_image1="@drawable/nearbyicon"

            app:bubbleTab_image2="@drawable/recommendedicon2"
            app:bubbleTab_image3="@drawable/freedeliveryicon"
/>





        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/viewPagerId">

        </androidx.viewpager.widget.ViewPager>


    </LinearLayout>

</LinearLayout>