<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FoodApp"
    android:id="@+id/food_app_layout">



    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:title="PPEEP FOOD"
        android:gravity="center"
        android:theme="@style/AppTheme2"
        android:id="@+id/foodtoolbar"

        android:background="@color/colorPrimary">


    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/layout_address">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:text="Delivery To:"
                android:textSize="14sp"

                />
            <TextView
                android:id="@+id/tv_delivery_address"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_margin="10dp"
                android:maxLength="40"
                android:text="c1, monallee tower, bastola"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLines="1"

                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_forward"
                android:layout_gravity="center"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <com.github.florent37.bubbletab.BubbleTab
            android:id="@+id/tabLayoutId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="true"
            android:background="@android:color/white"
            android:elevation="10dp"
            app:bubbleTab_circleColor="#ffcc00"
            app:bubbleTab_circleRatio="1.25"
            android:tooltipText="Home"
            app:bubbleTab_image0="@drawable/homeicon2"
            app:bubbleTab_image1="@drawable/nearbyicon"
            app:bubbleTab_image2="@drawable/recommendedicon2"
            app:bubbleTab_image3="@drawable/freedeliveryicon" />

        <com.sothree.slidinguppanel.SlidingUpPanelLayout
            xmlns:sothree="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sliding_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            sothree:umanoPanelHeight="68dp"
            sothree:umanoShadowHeight="4dp">

                <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/viewPagerId">

                </androidx.viewpager.widget.ViewPager>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:orientation="horizontal">

                        <SeekBar android:id="@+id/seekBar1"
                            android:layout_width="0dp"
                            android:layout_weight=".25"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:layout_margin="0dp"
                            android:indeterminate="true"
                            android:progress="0"
                            />
                        <SeekBar android:id="@+id/seekBar2"
                            android:layout_width="0dp"
                            android:layout_weight=".25"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:layout_margin="0dp"
                            android:indeterminate="true"
                            android:progress="0" />
                        <SeekBar android:id="@+id/seekBar3"
                            android:layout_width="0dp"
                            android:layout_weight=".25"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:layout_margin="0dp"
                            android:indeterminate="true"
                            android:progress="0" />
                        <SeekBar android:id="@+id/seekBar4"
                            android:layout_width="0dp"
                            android:layout_weight=".25"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:layout_margin="0dp"
                            android:indeterminate="true"
                            android:progress="0" />
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:orientation="vertical">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="fitXY"
                                android:src="@drawable/banner" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="fitXY"
                                android:text="@string/banner_text" />

                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.9"
                    android:orientation="horizontal">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:padding="20dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:scaleType="fitXY"
                           android:text="@string/banner_text" />
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>









            </LinearLayout>



        </com.sothree.slidinguppanel.SlidingUpPanelLayout>


    </LinearLayout>


</LinearLayout>