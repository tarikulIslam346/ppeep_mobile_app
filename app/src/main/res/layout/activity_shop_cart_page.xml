<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShopCartPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
   android:layout_margin="10dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@drawable/product_sample"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Premium Dell Latitude E7440 Ultrabook 14 Inch HD Business Laptop "
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="White, 15.6"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:textColor="#4CAF50"
                    android:text="edit"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/productNameId"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageTakasign"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:gravity="center_vertical"
                        android:src="@drawable/taka_sign_demo"
                        android:layout_marginRight="5dp"

                        />

                    <TextView
                        android:id="@+id/productamount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@+id/imageTakasign"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/decrease"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/integer_number"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="16sp" />


                    <Button
                        android:id="@+id/increase"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"

                        android:text="+"
                        android:textSize="16sp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>



            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="6dp">

                        <TextView
                            android:id="@+id/tv_total_food_price"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Sub Total" />
                        <TextView
                            android:id="@+id/tv_food_price"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="Price"/>

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginRight="15dp"
                            android:text="Taka"/>


                    </LinearLayout>







                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="6dp">

                        <TextView
                            android:id="@+id/tv_vat_amount"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="VAT" />
                        <TextView
                            android:id="@+id/tv_total_vat"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"

                            android:text="Price"/>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginRight="15dp"
                            android:text="Taka"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="6dp">

                        <TextView

                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Delivery Charge" />
                        <TextView
                            android:id="@+id/tv_delivery_charge"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="Price"/>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginRight="15dp"
                            android:text="Taka"/>

                    </LinearLayout>





                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="6dp">

                        <TextView
                            android:id="@+id/tv_discount_amount_promo_code"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Discount(%)" />
                        <TextView
                            android:id="@+id/tv_discount_amount_promo_code_cash"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="0.0"/>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="Taka"/>

                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="6dp">

                    <TextView

                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColor="#33A738"
                        android:text="Discount (Point)" />
                    <TextView
                        android:id="@+id/tv_discount_amount"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textColor="#33A738"
                        android:text="0.0"/>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:textColor="#33A738"
                        android:text="Taka"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="6dp">

                    <TextView
                        android:id="@+id/tv_order_item_total_price"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Total" />
                    <TextView
                        android:id="@+id/tv_order_item_price"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"

                        android:text="Price"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="Taka"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Use Point"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        />
                    <TextView
                        android:id="@+id/tv_my_point"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My Point : 0.0"
                        android:textSize="13sp"
                        android:layout_marginLeft="20dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp"
                        android:gravity="center">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/userPointTextInputLayout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="230dp"
                            android:layout_marginRight="10dp"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/userPointTextInputEditText"
                                android:layout_width="230dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="80dp"
                                android:textSize="13sp"
                                android:hint="Max point use per order 50" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/bt_add_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#ffcc00"
                            android:text="ADD +"
                            android:textColor="#0C0C0C"
                            />

                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:layout_margin="10dp">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send as a Gift"
        android:padding="10dp"
        android:layout_marginLeft="30dp"
        />

</com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Payement Type"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cash On Delivery"
                        android:checked="true"
                        android:layout_marginLeft="30dp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:text="Delivery To:"
                        android:textSize="17sp"

                        />
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:elevation="5dp">


                        <TextView
                            android:id="@+id/tv_user_address_map_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_margin="2dp"
                            android:textSize="14sp"

                            android:text="c1, monallee tower, bastola"

                            />
                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>





                <Button
                    android:id="@+id/btn_applyPromo"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Apply Promo"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="#0A0909"
                    android:layout_margin="20dp"

                    />





            <Button
                android:id="@+id/placeOrderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Place Order"
                android:gravity="center"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#ffcc00"
                android:textColor="#0A0909"
                />


        </LinearLayout>



    </ScrollView>

</LinearLayout>