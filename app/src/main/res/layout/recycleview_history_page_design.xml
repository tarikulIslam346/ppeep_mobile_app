<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".HistoryPage">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/logo_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/foodicon"
                android:background="@drawable/friendlist_icon_bg" />

            <LinearLayout
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:background="@drawable/friendlist_name_bg"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_Id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="#001" />

                <TextView
                    android:id="@+id/tv_restaurant_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingRight="16dp"
                    android:text="Kal Boishakhi"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />


                <TextView
                    android:id="@+id/tv_order_status"
                    android:layout_width="227dp"
                    android:layout_height="wrap_content"
                    android:text="Order Delivered"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="6dp"
                        android:text="Date :"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_order_date"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="6dp"
                        android:text="01/07/2019"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:paddingRight="6dp"
                        android:text="Time :"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_order_time"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="16dp"
                        android:text="12:04 PM"
                        android:textSize="11sp"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>



</LinearLayout>