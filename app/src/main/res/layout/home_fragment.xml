<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FragmentHome"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    android:layout_height="match_parent"
    android:id="@+id/sb_home_fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">


                <com.smarteist.autoimageslider.SliderLayout
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="240dp" />

            </com.google.android.material.card.MaterialCardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"

                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/ppeepfoodCard"
                    android:layout_width="120dp"
                    android:layout_height="130dp"
                    android:layout_margin="4dp"
                    android:backgroundTint="#FAF9F8"
                    android:elevation="8dp"


                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="4dp"
                            android:src="@drawable/food_icon_demo2"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/opensans"
                            android:padding="4dp"
                            android:text="P-PEEP FOOD"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/ppeepStoreCardView"
                    android:layout_width="120dp"
                    android:layout_height="130dp"
                    android:layout_margin="4dp"
                    android:backgroundTint="#F8FAFA"
                    android:elevation="8dp"

                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="4dp"
                            android:src="@drawable/shop_icon_demo2"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/gothic"
                            android:padding="4dp"
                            android:text="P-PEEP Shop"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/ppeepRideCardView"
                    android:layout_width="120dp"
                    android:layout_height="130dp"
                    android:layout_margin="4dp"
                    android:backgroundTint="#FAFBFC"
                    android:elevation="5dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="4dp"
                            android:src="@drawable/bike_icon_demo2"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/opensans"
                            android:padding="4dp"
                            android:text="P-PEEP Ride"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:gravity="center"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/home_icon"
                            android:layout_width="80dp"
                            android:layout_height="90dp"
                            android:padding="20dp"
                            android:src="@drawable/home_icon" />

                        <View
                            android:layout_width="1px"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20px"
                            android:layout_marginRight="20px"
                            android:background="#0A0909" />

                        <LinearLayout
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            android:paddingRight="20dp">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:paddingRight="16dp"
                                android:text="Home"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_home_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:paddingRight="6dp"
                                android:singleLine="true"
                                android:text="Uttara,Dhaka-1230"
                                android:textSize="12sp" />


                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"

                            android:src="@drawable/ic_forward" />

                    </LinearLayout>

                    <View

                        android:layout_width="50dp"
                        android:layout_height="1px"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:background="#0A0909" />

                    <View

                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="105dp"
                        android:layout_marginRight="15dp"
                        android:background="#0A0909" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:gravity="center"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/work_icon"
                            android:layout_width="80dp"
                            android:layout_height="90dp"

                            android:padding="20dp"
                            android:src="@drawable/workicon" />

                        <View
                            android:layout_width="1px"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20px"
                            android:layout_marginRight="20px"
                            android:background="#0A0909" />

                        <LinearLayout
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical"


                            >

                            <TextView

                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:paddingRight="16dp"
                                android:text="Work"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView

                                android:id="@+id/tv_work_address"


                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:ellipsize="end"

                                android:maxLines="1"
                                android:paddingRight="6dp"
                                android:singleLine="true"
                                android:text="1c, Monalee tower,Shahjadpur,gulshan, dhaka-1212"
                                android:textSize="12sp" />


                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_forward" />
                    </LinearLayout>


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="70dp"></View>

        </LinearLayout>
    </ScrollView>

</LinearLayout>